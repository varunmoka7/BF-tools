# Production Environment Configuration Template
# Copy this file to .env.production and update the values

NODE_ENV=production

# API Configuration
NEXT_PUBLIC_API_URL=https://your-production-domain.com
API_TIMEOUT=15000
API_RETRY_ATTEMPTS=3

# Performance Configuration
CACHE_TTL=600000
MAX_CACHE_SIZE=500
ENABLE_SERVICE_WORKER=true

# Security Configuration
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=50
ENABLE_CSP=true

# Monitoring Configuration
ENABLE_ERROR_TRACKING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ANALYTICS=true
NEXT_PUBLIC_MONITORING_ENDPOINT=https://your-monitoring-service.com/api/errors

# Feature Flags
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_EXPORT_FEATURES=true

# Database Configuration (if using Supabase)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# CDN Configuration
NEXT_PUBLIC_CDN_URL=https://your-cdn.com

# Analytics Configuration
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token
