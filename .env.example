# Waste Intelligence Platform Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration  
DB_PATH=./data/waste_intelligence.db

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080

# API Configuration
API_VERSION=1.0.0
API_RATE_LIMIT=1000

# Security
JWT_SECRET=your-super-secret-jwt-key-here
API_KEY=your-api-key-for-external-services

# External Services (Optional)
# WASTE_MARKETPLACE_API=https://api.wastemarket.com
# GIS_SERVICE_API=https://maps.googleapis.com/maps/api
# CARBON_CALCULATOR_API=https://api.carboncalc.com

# Analytics Configuration
ENABLE_ANALYTICS=true
ENABLE_OPPORTUNITY_SCORING=true
ENABLE_RISK_ASSESSMENT=true

# Performance
MAX_REQUEST_SIZE=10mb
QUERY_TIMEOUT=30000
CONNECTION_POOL_SIZE=10

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Feature Flags
ENABLE_LEAD_GENERATION=true
ENABLE_MARKET_SIZING=true
ENABLE_BENCHMARKING=true
ENABLE_TREND_ANALYSIS=true